<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root fx:id="stage" title="Activity Sampling" type="Stage" xmlns="http://javafx.com/javafx/19"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.muspellheim.activitysampling.application.ActivitySamplingView">
  <scene>
    <Scene>
      <root>
        <VBox>
          <children>
            <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Notifications">
                  <items>
                    <Menu mnemonicParsing="false" text="Start">
                      <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart5Min" text="5 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart10Min"
                                  text="10 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart15Min"
                                  text="15 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart20Min"
                                  text="20 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart30Min"
                                  text="30 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart60Min"
                                  text="60 min"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleStart1Min" text="1 min"/>
                      </items>
                    </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#handleStop" text="Stop"/>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <VBox VBox.vgrow="ALWAYS">
              <children>
                <Label text="Activity:"/>
                <TextField fx:id="activityText" onAction="#handleLog">
                  <VBox.margin>
                    <Insets top="4.0"/>
                  </VBox.margin>
                </TextField>
                <Button fx:id="logButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handleLog" text="Log">
                  <VBox.margin>
                    <Insets top="8.0"/>
                  </VBox.margin>
                </Button>
                <Label fx:id="countdownLabel" alignment="CENTER" maxWidth="1.7976931348623157E308"
                       text="00:20:00">
                  <VBox.margin>
                    <Insets top="8.0"/>
                  </VBox.margin>
                </Label>
                <ProgressBar fx:id="countdownProgress" maxWidth="1.7976931348623157E308"
                             progress="0.0">
                  <VBox.margin>
                    <Insets top="4.0"/>
                  </VBox.margin>
                </ProgressBar>
                <ListView fx:id="recentActivities" prefWidth="320.0" VBox.vgrow="ALWAYS">
                  <VBox.margin>
                    <Insets top="8.0"/>
                  </VBox.margin>
                </ListView>
              </children>
              <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
              </VBox.margin>
            </VBox>
          </children>
        </VBox>
      </root>
    </Scene>
  </scene>
</fx:root>
